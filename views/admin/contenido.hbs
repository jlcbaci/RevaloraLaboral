<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Tabla Contenido</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <button class="btn btn-primary" data-toggle="modal" data-target="#myModalAdd">Nuevo registro</button>
                    <table width="100%" class="table table-striped table-bordered table-hover" id="mytable">
                        <thead style="background: #999;">
                            <tr>
                                <th class="text-center" style="width: 5%;">#</th>
                                <th class="text-center" style="width: 20%;">Titulo</th>
                                <th class="text-center" style="width: 45%;">Contenido</th>
                                <th class="text-center" style="width: 10%;">Estado</th>
                                <th class="text-center" style="width: 25%;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                        {{#each results}}
                        <tr>
                            <td class="text-center"><input name='idcontenido' id='idcontenido' type='checkbox' value="{{ idcontenido }}" ></td>	
                            <td class="text-center">{{ titcontenido }}</td>
                            <td>{{ desccontenido }}</td>
                            <td class="text-center">{{#ifeq flag "1" }}Activo{{else}}Inactivo{{/ifeq}}</td>
                        <td class="text-center">
                            <a href="javascript:void(0);" class="btn btn-success view" data-id="{{ idcontenido }}" data-titcontenido="{{ titcontenido }}" data-desccontenido="{{ desccontenido }}" data-fecmod="{{formatTime fecmod "DD/MM/YYYY hh:mm:ss"}}" data-flag="{{ flag }}">Ver</a>    
                            <a href="javascript:void(0);" class="btn btn-primary edit" data-id="{{ idcontenido }}" data-titcontenido="{{ titcontenido }}" data-desccontenido="{{ desccontenido }}" data-flag="{{ flag }}">Editar</a>    
                            <a href="javascript:void(0);" class="btn btn-danger delete" data-id="{{ idcontenido }}"> Borrar</a>
                        </td>
                        </tr>
                        {{/each}}                        
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<form action="/viewcont" method="post">
    <div class="modal fade" id="ViewModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Vista de tabla Contenido</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">ID</label>
                        <div class="col-sm-10">
                        <input type="text" name="id" class="form-control idcontenido" readonly>
                        </div>                    
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Titulo</label>
                        <div class="col-sm-10">
                        <input type="text" name="titcontenido" class="form-control titcontenido" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Contenido</label>
                        <div class="col-sm-10">
                        <textarea class="form-control desccontenido" name="desccontenido" rows="3" readonly></textarea>
                        </div>  
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Fecha</label>
                        <div class="col-sm-10">
                        <input type="text" name="fecmod" class="form-control fecmod" readonly>
                        </div>  
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Estado</label>
                        <div class="col-sm-10">
                        <input type="text" name="flag" class="form-control flag" readonly>
                        </div>  
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<form action="/savecont" method="post">
    <div class="modal fade" id="myModalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="exampleModalLabel">Nuevo registro de tabla Contenido</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Titulo</label>
                        <div class="col-sm-10">
                            <input type="text" name="titcontenido" class="form-control" placeholder="Titulo" required>
                        </div>                    
                    </div>                    
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Contenido</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" name="desccontenido" rows="3" placeholder="Contenido" required></textarea>
                        </div>                    
                    </div>    
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Estado</label>
                        <div class="col-sm-10">
                            <div class="form-group form-check col-md-3">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="optRadio1" value="1">
                                <label class="form-check-label" for="optRadio1">Activo</label>
                            </div>
                            <div class="form-group form-check col-md-3">
                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="optRadio2" value="0">
                                <label class="form-check-label" for="optRadio2">Inactivo</label>
                            </div>
                        </div>                    
                    </div> 
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Grabar</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</form>
<form action="/updatecont" method="post">
    <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="exampleModalLabel">Editar Tabla Contenido</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">ID</label>
                        <div class="col-sm-10">
                            <input type="text" name="id" class="form-control idcontenido" disabled>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Titulo</label>
                        <div class="col-sm-10">                        
                            <input type="text" name="titcontenido" class="form-control titcontenido" placeholder="Titulo de contenido">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Contenido</label>
                        <div class="col-sm-10">
                            <textarea class="form-control desccontenido" name="desccontenido" rows="3" placeholder="Contenido" required></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Estado</label>
                        <div class="col-sm-10">                
                    </div>
                    <div class="form-group form-check col-md-3">
                        <input class="form-check-input flag" type="radio" name="inlineRadioOptions" id="optRadio1" value="1">
                        <label class="form-check-label" for="optRadio1">Activo</label>
                    </div>
                    <div class="form-group form-check col-md-3">
                        <input class="form-check-input flag" type="radio" name="inlineRadioOptions" id="optRadio2" value="0">
                        <label class="form-check-label" for="optRadio2">Inactivo</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="id" class="idcontenido">
                    <button type="submit" class="btn btn-primary">Actualizar</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</form>
<form id="add-row-form" action="/delcontenido" method="post">
    <div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="myModalLabel">Eliminar registro Sector</h3>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <strong>¿Estás seguro de eliminar el registro?</strong>
                </div>
                <div class="modal-footer">
                    <input type="hidden" name="id" class="form-control id2" required>
                    <button type="submit" class="btn btn-primary">Eliminar</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="/assets/vendor/jquery/jquery.min.js"></script>
<script src="/assets/vendor/bootstrap/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function (){
        $('#mytable').on('click', '.view', function (){
            var idcontenido = $(this).data('id');
            var titcontenido = $(this).data('titcontenido');
            var desccontenido = $(this).data('desccontenido');
            var flag = $(this).data('flag');
            var fecmod = $(this).data('fecmod');
            $('#ViewModal').modal('show');
            $('.titcontenido').val(titcontenido);
            $('.desccontenido').val(desccontenido);
            $('.idcontenido').val(idcontenido);
            $('.flag').val(flag);
            $('.fecmod').val(fecmod);
        });
        $('#mytable').on('click', '.edit', function (){
            var idcontenido = $(this).data('id');
            var titcontenido = $(this).data('titcontenido');
            var desccontenido = $(this).data('desccontenido');
            var flag = $(this).data('flag');
            $('#EditModal').modal('show');
            $('.titcontenido').val(titcontenido);
            $('.desccontenido').val(desccontenido);
            $('.idcontenido').val(idcontenido);
            $("input[name=inlineRadioOptions][value=" + flag + "]").prop('checked', true);
        });
        $('#mytable').on('click', '.delete', function (){
            var idcontenido = $(this).data('id');
            $('#DeleteModal').modal('show');
            $('.id2').val(idcontenido);
        });
    });
</script>